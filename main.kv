<IconListItem>:
    IconLeftWidget:
        icon: root.icon

<CheckboxRange>:
    group: "range_of_pages"
    size_hint_x: .1

<Container>:
    orientation: "vertical"
    padding: dp(10)

    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: .3
            canvas:
                Color:
                    rgba: 1, 1, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Widget:
            MDTextField:
                canvas.before:
                    Color:
                        rgba: 1, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: tf_lang
                size_hint_x: .3
                pos_hint_y: {"y": 0}
                hint_text: "Language:"
                on_focus: if self.focus: app.menu_lang.open()
            Widget:
        BoxLayout:
            size_hint_y: .1
            Widget:
            MDLabel:
                text: "Print:"
                text_size: self.size
                halign: "center"
                valign: "bottom"
                size_hint_x: .3
            Widget:
        BoxLayout:
            orientation: "vertical"
            size_hint_y: .2
            BoxLayout:
                Widget:
                CheckboxRange:
                    active: True
                MDLabel:
                    text: "All pages"
                    text_size: self.size
                    halign: "left"
                    valign: "center"
                    size_hint_x: .3
                Widget:
            BoxLayout:
                Widget:
                CheckboxRange:
                MDLabel:
                    text: "The range"
                    text_size: self.size
                    halign: "left"
                    valign: "center"
                    size_hint_x: .3
                Widget:
        Widget:
